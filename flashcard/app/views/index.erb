<div class="container">
  <h1>Welcome to Flashy!</h1>
  <p>Please sign in</p>

  <form method="post" action="/decks">
    <label for="email">Email:</label><input type="text" name="email"><br>
    <label for="password">Password:</label><input type="password" name="password"><br>
    <input class="button" type="submit" value="Log In"><br><br>
  </form>

  <p>Or Create an Account!!!!!</p><br>

  <% if @error %>
    <p class="error">Your password doesn't match the password confirmation...please try again. : 0 )</p><br>
  <% end %>

  <form method="post" action="/new_user">
    <label for="name">Name:</label><input type="text" name="name"><br>
    <label for="email">Email:</label><input type="text" name="email"><br>
    <label for="password">Password:</label><input type="password" name="password"><br>
    <label for="confirmation">Confirm Password:</label><input type="password" name="confirmation"><br>
    <input type="submit" value="Create Account"><br>
  </form>



</div>
